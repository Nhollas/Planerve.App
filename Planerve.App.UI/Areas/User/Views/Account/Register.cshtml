@model Planerve.App.UI.ViewModels.AccountVMs.RegisterViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Register";
}

<section class="flex flex-col w-full justify-center items-center mt-12">
    <div class="w-full max-w-6xl flex md:flex-row flex-col items-center bg-[#FEFFFF] md:min-h-[75vh] justify-center md:p-16 relative border-[1px] border-gray-200">
        <div class="flex flex-col px-8 py-24 gap-y-6 w-full max-w-md md:py-0 md:px-0">
            <h1 class="text-3xl font-poppins font-semibold">
                Create An Account
            </h1>
            <p class="text-base font-base -mt-2 mb-4">Registration is free, set your account up to start using our services.</p>
            <form action="" class="flex flex-col gap-6" method="post">
                <div class="flex flex-col gap-y-3">
                    <label class="text-base" for="username">Username</label>
                    <input class="border-[1px] border-gray-300 border-b-[#001534] border-b-2 h-10 w-full max-w-md px-5" id="username" type="text" name="Username" asp-for="Username">
                </div>
                <div class="flex flex-col gap-y-3">
                    <label class="text-base" for="email">Email Address</label>
                    <input class="border-[1px] border-gray-300 border-b-[#001534] border-b-2 h-10 w-full max-w-md px-5" id="email" type="text" name="Email" asp-for="Email">
                </div>
                <div class="flex flex-col gap-y-3">
                    <label class="text-base" for="password">Password</label>
                    <input class="border-[1px] border-gray-300 border-b-[#001534] border-b-2 h-10 w-full max-w-md px-5" id="password" type="text" name="Password" asp-for="Password">
                </div>
                <div class="flex flex-col gap-y-3">
                    <label class="text-base" for="confirmpassword">Confirm Password</label>
                    <input class="border-[1px] border-gray-300 border-b-[#001534] border-b-2 h-10 w-full max-w-md px-5" id="confirmpassword" type="text" name="Confirm Password" asp-for="ConfirmPassword">
                </div>
                <button type="submit" class="font-link flex w-full max-w-sm cursor-pointer items-center justify-center rounded-md py-3 font-semibold border-[1px] border-purple-600 bg-purple-100 hover:bg-purple-300 mt-4">Create Account</button>
            </form>
            <div class="flex flex-row gap-2">
                <p class="text-lg">Already have an account?</p>
                <a asp-action="Dashboard" asp-controller="Application" asp-area="User" class="underline text-indigo-600 font-medium cursor-pointer text-lg">Sign In</a>
            </div>
        </div>
    </div>
</section>