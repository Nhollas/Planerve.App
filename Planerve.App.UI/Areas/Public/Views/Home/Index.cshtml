@{
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<section class="flex flex-col w-full justify-center items-center">
    <div class="w-full flex md:flex-row flex-col items-center bg-[#001534] md:min-h-[75vh] justify-center md:p-16 relative">
        <div class="flex flex-col px-8 py-24 w-full max-w-5xl md:py-0 md:px-0">
            <div class="flex flex-col gap-12 justify-center items-center">
                <image src="/design/logoMain.svg" class="h-10"></image>
                <div class="flex flex-col gap-2 lg:flex-row">
                    <h1 class="text-6xl font-link font-bold text-white">Planning Process.</h1>
                    <h1 class="text-6xl font-link font-bold text-purple-500">Modernised.</h1>
                </div>
                <p class="text-lg max-w-lg text-white">
                    A free open-source project that has tools designed to be
                    simplistic and accessible to streamline the process of Planning
                    Permission for customers and professionals alike.
                </p>
            <a asp-area="User" asp-controller="Account" asp-action="Register" tabIndex="0" class="font-link flex w-full max-w-sm cursor-pointer items-center justify-center rounded-md py-3 font-semibold border-[1px] border-purple-600 bg-purple-100 hover:bg-purple-600 hover:text-white">
                    Begin your journey now!
                </a>
            </div>
        </div>
    </div>
</section>